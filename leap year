#include<iostream>
using namespace std;
int main () 
{
	int year;
	bool isleapyear;
	cout<<"enter the year"<<endl;
	cin>>year;
	isleapyear=((year%4==0&&year%100!=0)||year%400==0);
	if(isleapyear)
	cout<<"year "<<year<<" is leapyear"<<endl;
	else
	cout<<"year "<<year<<" is not leapyear"<<endl;
	year+=2;
	return 0;	
}
